{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "if",
        "else",
        "for",
        "extend",
        "extends",
        "ignores",
        "mixin",
        "each",
        "content",
        "include"
      ]
    }],
    "indentation": 2,
    "number-leading-zero": null,
    # "value-list-comma-space-after": always,
    "unit-no-unknown": true,
    "unit-whitelist": ["ms", "dppx", "em", "rem", "s", "px", "%", "deg", "vw", "vh"]
  }
}
